<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
<RelativeLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   	<RelativeLayout 
   	android:id="@+id/actionbar"
   	android:layout_width="fill_parent"
   	android:layout_height="40dp"
   	android:layout_alignParentTop="true"
   	android:background="@drawable/top_actionbar">
   	<TextView
   	android:id="@+id/title_actionbar"
   	android:layout_height="fill_parent"
   	android:layout_alignParentLeft="true"
   	android:layout_width="wrap_content"
   	android:gravity="center_vertical"
   	android:textColor="@color/white"
   	android:paddingLeft="10dp"
   	android:text="PoznanAPI ITINER"
   	/>  
   	<ProgressBar
   		android:id="@+id/progressbar_titlebar"
   		android:layout_height="30dp"
   		android:layout_width="30dp"
   		android:gravity="center_vertical"
   		android:layout_alignParentRight="true"
   		android:max="100"  	
   		android:visibility="gone"
   			/> 	
   	</RelativeLayout>
<!--    	WYBÓR CMENTARZA -->
   	<LinearLayout
   		android:id="@+id/necropolis_choose"
	   	android:layout_below="@id/actionbar"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="10dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="vertical"
   	>
   	<TextView 
	   	android:id="@+id/necropolis_header"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:text="Wybierz cmentarz"/>
   	<Spinner 
	   	android:paddingTop="5dp"
	   	android:id="@+id/necropolis_spinner"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:prompt="@string/necropolis_prompt"
   	/>
   	</LinearLayout>
   	<LinearLayout 
   		android:id="@+id/date_choose_header"
	   	android:layout_below="@id/necropolis_choose"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="5dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="horizontal"
   	>
   	<TextView 
	   	android:id="@+id/date_header"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:text="Wybierz datę: "/> 
	<TextView
		android:id="@+id/birth_date"
		android:clickable="true"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:editable="true"
		android:textStyle="bold"
		android:paddingRight="4dp"
		android:textColor="@color/white"
		android:background="@color/black"
		android:text="urodzenia"
		android:layout_height="wrap_content"></TextView>
			<TextView
			android:clickable="true"
		android:id="@+id/death_date"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:editable="true"
		android:textColor="@color/white"
		android:background="@color/black"
		android:text="śmierci"
		android:textStyle="bold"
		android:layout_height="wrap_content"></TextView>
			<TextView
			android:clickable="true"
		android:id="@+id/burial_date"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:editable="true"
		android:textColor="@color/black"
		android:background="@color/white"
		android:text="pogrzebu"
		android:textStyle="bold"
		android:layout_height="wrap_content"></TextView>
		
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/datechoose"
		android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_below="@id/date_choose_header">
   	<CheckBox  android:id="@+id/checkbox"
   	 android:layout_width="wrap_content"
   	  android:layout_height="wrap_content"
   	  android:text="Pokaż wybór daty"
   	  ></CheckBox>
   	<DatePicker 
	   	android:paddingTop="5dp"
	   	android:id="@+id/datepicker"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:visibility="gone"
   	/>
   	</LinearLayout>
 
   	<LinearLayout 
   		android:id="@+id/name_choose"
	   	android:layout_below="@id/datechoose"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="5dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="vertical"
   	>
   	<TextView 
	   	android:id="@+id/date_header"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:text="Wprowadź imię oraz nazwisko"/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="2" >
   	<EditText 
	   	android:paddingTop="5dp"
	   	android:id="@+id/name"
	   	android:layout_weight="1"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:hint="Imię"
	   	android:text="Michał"
   	/>
   	<EditText 
	   	android:paddingTop="5dp"
	   	android:id="@+id/surname"
	   	android:layout_weight="1"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:hint="Nazwisko"
	   	android:text="Urbaniak"
   	/>
   	</LinearLayout>
   	</LinearLayout> 
   	<LinearLayout 
   		android:id="@+id/buttons"
	   	android:layout_below="@id/name_choose"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:padding="10dp"
	   	android:gravity="right|center_vertical"
	   	android:orientation="horizontal"
   	>
   	<Button 
   		android:id="@+id/find_btn"
   		android:layout_width="100dp"
   		android:layout_height="wrap_content"   		
   		android:text="Szukaj"  />
</LinearLayout>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
</RelativeLayout>
</ScrollView>
