<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
  
   	<RelativeLayout 
   	android:id="@+id/actionbar"
   	android:layout_width="fill_parent"
   	android:layout_height="40dp"
   	android:layout_alignParentTop="true"
   	android:background="@android:drawable/title_bar_tall"
   	>
   	<TextView
   	android:id="@+id/title_actionbar"
   	android:layout_height="fill_parent"
   	android:layout_alignParentLeft="true"
   	android:layout_width="wrap_content"
   	android:gravity="center_vertical"
   	android:textColor="@color/white"
   	android:paddingLeft="10dp"
   	android:typeface="sans"
   	android:textStyle="bold"
   	android:textSize="18sp"
   	android:text="PoznanAPI ITINER"
   	/> 
   	<ProgressBar
   		android:id="@+id/progressbar_titlebar"
  		android:layout_height="30dp"
   		android:layout_width="30dp"
   		android:gravity="center_vertical"
   		android:layout_centerVertical="true"
   		android:layout_alignParentRight="true"
  		android:max="100"  	
   		android:visibility="gone"
  			/> 	
                         
 	
   	</RelativeLayout>
<ScrollView 
android:layout_below="@id/actionbar"
 android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:drawable/screen_background_dark_transparent"
>   	  
	<RelativeLayout 
		android:id="@+id/all"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/actionbar"
	>
	  
    <LinearLayout 
   
    				android:id="@+id/linear_main"
    				android:layout_height="fill_parent"
    				android:layout_width="fill_parent"
    				android:orientation="vertical">
<!--    	WYBÓR CMENTARZA -->
	   
   	<LinearLayout
   		android:id="@+id/necropolis_choose"
	   	android:layout_below="@id/actionbar"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="10dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="vertical"
   	>
   	<TextView 
	   	android:id="@+id/necropolis_header"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:text="Wybierz cmentarz"/>
   	<Spinner 
	   	android:paddingTop="5dp"
	   	android:id="@+id/necropolis_spinner"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:prompt="@string/necropolis_prompt"
   	/>
   	</LinearLayout>
   	<LinearLayout 
   		android:id="@+id/date_choose_header"
	   	android:layout_below="@id/necropolis_choose"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="5dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="horizontal"
   	>
   	<TextView 
	   	android:id="@+id/date_header"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:text="Wybierz datę: "/> 
	<TextView
		android:id="@+id/birth_date"
		android:clickable="true"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:editable="true"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:textStyle="bold"
		android:paddingRight="4dp"
		android:textColor="@color/white"
		android:background="@color/black"
		android:text="urodzenia"
		android:layout_height="wrap_content"></TextView>
			<TextView
			android:clickable="true"
		android:id="@+id/death_date"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:editable="true"
		android:textColor="@color/white"
		android:background="@color/black"
		android:text="śmierci"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:textStyle="bold"
		android:layout_height="wrap_content"></TextView>
			<TextView
			android:clickable="true"
		android:id="@+id/burial_date"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		android:editable="true"
		android:textColor="@color/black"
		android:background="@color/white"
		android:text="pogrzebu"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		android:textStyle="bold"
		android:layout_height="wrap_content"></TextView>
		
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/datechoose"
		android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_below="@id/date_choose_header">
   	<CheckBox  android:id="@+id/checkbox"
   	 android:layout_width="wrap_content"
   	  android:layout_height="wrap_content"
   	  android:layout_marginLeft="10dp"
   	  android:text="Pokaż wybór daty"
   	  ></CheckBox>
   	<DatePicker 
	   	android:paddingTop="5dp"
	   	android:id="@+id/datepicker"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:visibility="gone"
   	/>
   	</LinearLayout>
 
   	<LinearLayout 
   		android:id="@+id/name_choose"
	   	android:layout_below="@id/datechoose"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingTop="5dp"
	   	android:paddingLeft="10dp"
	   	android:paddingRight="10dp"
	   	android:paddingBottom="5dp"
	   	android:orientation="vertical"
   	>
   	<TextView 
	   	android:id="@+id/date_header"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:text="Wprowadź imię oraz nazwisko"/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="2" >
   	<EditText 
	   	android:paddingTop="5dp"
	   	android:id="@+id/name"
	   	android:layout_weight="1"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:hint="Imię"
	   	android:text=""
   	/>
   	<EditText 
	   	android:paddingTop="5dp"
	   	android:id="@+id/surname"
	   	android:layout_weight="1"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:hint="Nazwisko"
	   	android:text=""
   	/>
   	</LinearLayout>
   	</LinearLayout> 
   	<RelativeLayout 
   		android:id="@+id/buttons"
	   	android:layout_width="fill_parent"
	   	android:layout_height="wrap_content"
	   	android:padding="10dp"
	    android:layout_alignParentBottom="true"

   	><!-- 	    android:layout_below="@id/surname" -->
   	<Button 
   		
   		android:id="@+id/find_btn"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		   		
   		android:text="Szukaj"  />
</RelativeLayout>
 
</LinearLayout> 
   	

   
</RelativeLayout> 
</ScrollView>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
</RelativeLayout>

