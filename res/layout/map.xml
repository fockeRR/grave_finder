     	<!-- IMIE I NAZWISKO-->
    <TextView 
	android:id="@+id/map_surname_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:text="Imię i nazwisko"
    android:typeface="sans"
    android:padding="5dp"
    android:textSize="20sp"
    android:textStyle="bold"
 	 >
</TextView>


<!-- CMENTARZ-->
<TextView 
	android:id="@+id/map_value_cementry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/map_surname_name"
    android:padding="2dp"
    android:textStyle="bold"
    android:typeface="sans"
    android:textSize="18sp" />

<!-- DATA URODZIN-->
<TextView
	android:id="@+id/map_header_dateBirth"
	android:layout_below="@id/map_value_cementry"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:text="ur. "
	>
</TextView>
<!-- KWATERA -->
<TextView 
	android:id="@+id/map_quater_value"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_below="@id/map_surname_name"
	android:textStyle="bold"
	android:paddingRight="2dp"
	/>
<TextView 
	android:id="@+id/map_quater_header"
	android:layout_height="wrap_content"
	android:layout_toLeftOf="@id/map_quater_value"
	android:layout_width="wrap_content"
	android:layout_below="@id/map_surname_name"
	android:text="Kwatera:  "
	android:typeface="sans"
	/>
	
<!-- RZAD -->
<TextView 
	
	android:id="@+id/map_row_value"
	android:paddingRight="2dp"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_below="@id/map_quater_value"
	android:textStyle="bold"
	/>
<TextView 
	android:id="@+id/map_row_header"
	android:layout_height="wrap_content"
	android:layout_toLeftOf="@id/map_row_value"
	android:layout_width="wrap_content"
	android:layout_below="@id/map_quater_value"
	android:text="Rząd:  "
	android:typeface="sans"
	/>
<!-- POLE -->
<TextView 
	android:id="@+id/map_field_value"
	android:paddingRight="2dp"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_below="@id/map_row_value"
	android:textStyle="bold"
	/>
<TextView 
	android:id="@+id/map_field_header"
	android:layout_height="wrap_content"
	android:layout_toLeftOf="@id/map_field_value"
	android:layout_width="wrap_content"
	android:layout_below="@id/map_row_value"
	android:text="Pole:  "
	android:typeface="sans"
	/>
<TextView
	android:id="@+id/map_value_dateBirth"
	
	android:layout_toRightOf="@id/map_header_dateBirth"
	android:layout_below="@id/map_value_cementry"
	android:layout_width="wrap_content"
	android:textStyle="bold"
    android:layout_height="wrap_content"
	>
</TextView>
<!-- DATA SMIERCI-->

<TextView
	android:id="@+id/map_header_dateDeath"
	android:layout_width="wrap_content"
	android:paddingLeft="2dp"
	android:layout_below="@id/map_header_dateBirth"
    android:layout_height="wrap_content"
    android:text="zm. "
	>
</TextView>
<TextView
	android:layout_below="@id/map_value_dateBirth"
	android:id="@+id/map_value_dateDeath"
	android:layout_toRightOf="@id/map_header_dateDeath"
	android:layout_width="wrap_content"
	android:textStyle="bold"
	android:padding="2dp"
    android:layout_height="wrap_content"
	>
</TextView>
<!-- DATA POGRZEBU-->
<TextView

	android:id="@+id/map_header_dateBurial"
	android:paddingLeft="2dp"
	android:layout_below="@id/map_header_dateDeath"
	android:layout_width="wrap_content"
	
    android:layout_height="wrap_content"
	>
</TextView>
<TextView
	android:id="@+id/map_value_dateBurial"
	android:layout_toRightOf="@id/map_header_dateBurial"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	>
</TextView>
     </RelativeLayout>
 
